<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="9dp"
        app:cardBackgroundColor="#73d99c"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:layout_widthPercent="80%">

        <LinearLayout
            android:id="@+id/id_ln_card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.8dp"
                android:layout_marginRight="10.8dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="3"
                android:textColor="#f7f3f3"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/id_ln_pic_preview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_image1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="1dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/id_image2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="2dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/id_image3"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="2dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/id_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10.8dp"
                android:layout_marginRight="10.8dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/id_bt_location"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_location_on_white_48dp" />


                <TextView
                    android:id="@+id/id_tv_date"
                    android:ellipsize="end"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="2017年3月6日"
                    android:textColor="@color/beige"
                    android:textSize="10sp" />
                <TextView
                    android:maxLines="1"
                    android:id="@+id/id_tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3.27dp"
                    android:layout_toLeftOf="@+id/id_tv_date"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/id_bt_location"
                    android:gravity="left"
                    android:text="曲阜师范"
                    android:textColor="@color/beige"
                    android:textSize="10sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/id_rl_red_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_card"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5.5dp"
        android:layout_toLeftOf="@+id/item_card">

        <View
            android:id="@+id/id_curr_line"
            android:layout_width="wrap_content"
            android:layout_height="2.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#eb5050" />

        <View
            android:layout_width="5.8dp"
            android:layout_height="5.8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-2dp"
            android:background="@drawable/bg_oval_point" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_card"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/item_card">

        <TextView
            android:id="@+id/id_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="18"
            android:textColor="#ee4d4d"
            android:textSize="18.7sp" />

        <TextView
            android:id="@+id/id_tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_day"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="Fri"
            android:textColor="#694949"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#979797" />

</com.zhy.android.percent.support.PercentRelativeLayout>