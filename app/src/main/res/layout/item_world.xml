<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_widthPercent="95%w">

            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="震惊！瓜皮中单沉迷吃鸡，LPL剑指S7？"
                android:textColor="@color/titleTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_tv_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_title"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="今天很开心啊哈哈哈哈哈哈哈哈啊哈哈哈"
                android:textColor="#4c4a4a"
                android:textSize="13sp" />


            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/id_ln_pic_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_brief"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_image1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_heightPercent="20.8%w"
                    app:layout_widthPercent="32.7%w" />

                <ImageView
                    android:id="@+id/id_image2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_heightPercent="20.8%w"
                    app:layout_marginLeftPercent="0.95%w"
                    app:layout_widthPercent="32.7%w" />

                <ImageView
                    android:id="@+id/id_image3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_heightPercent="20.8%w"
                    app:layout_marginLeftPercent="0.95%w"
                    app:layout_widthPercent="32.7%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/id_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_ln_pic_preview"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/id_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:text="Miko"
                    android:textColor="#575555"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="10评论"
                    android:textColor="#575555"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="三天前"
                    android:textColor="#575555"
                    android:textSize="12sp" />

            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</android.support.v7.widget.CardView>
