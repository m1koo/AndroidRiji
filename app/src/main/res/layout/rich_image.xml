<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.zd.miko.riji.CustomView.RichEditText.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:padding="3dp"
        android:background="@drawable/bg_oval_point"
        android:id="@+id/image_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@id/edit_imageView"
        android:layout_alignRight="@id/edit_imageView"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clear_white_48dp" />
</RelativeLayout>