<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/id_rl_calendar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/id_rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="10.5%w"
            app:layout_marginRightPercent="10.5%w"
            app:layout_marginTopPercent="7%">

            <Button
                android:id="@+id/id_bt_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_keyboard_arrow_left_black_48dp" />


            <Button
                android:id="@+id/id_bt_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_keyboard_arrow_right_black_48dp" />

            <TextView
                android:id="@+id/id_tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="MARCH"
                android:textColor="#ff9330"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_month"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="2017"
                android:textColor="#ff9330"
                android:textSize="16sp" />
        </RelativeLayout>


        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/compactcalendar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/id_rl_header"
            app:compactCalendarBackgroundColor="@color/white"

            app:compactCalendarCurrentDayBackgroundColor="@color/circle_line"
            app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#2D87E2"
            app:compactCalendarCurrentSelectedDayIndicatorStyle="fill_large_indicator"
            app:compactCalendarCurrentSelectedDayTextColor="@color/white"
            app:compactCalendarEventIndicatorStyle="small_indicator"
            app:compactCalendarMultiEventIndicatorColor="@color/black"
            app:compactCalendarTargetHeight="340dp"
            app:compactCalendarTextColor="#2D87E2"
            app:compactCalendarTextSize="11sp"
            app:layout_heightPercent="55%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            app:layout_marginTopPercent="3%" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/id_rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/accent"
            app:layout_heightPercent="30%">

            <TextView
                android:id="@+id/id_tv_bottom_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期三"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_marginLeftPercent="10.5%"
                app:layout_marginTopPercent="6%w" />

            <TextView
                android:id="@+id/id_tv_bottom_currentday_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_bottom_week"
                android:text="04/08/2017"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_marginLeftPercent="10.5%"
                app:layout_marginTopPercent="1%w" />

            <TextView
                android:id="@+id/id_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="添加日记"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_marginRightPercent="10.5%"
                app:layout_marginTopPercent="8%w" />

            <com.zd.miko.riji.CustomView.DashedLineView
                android:id="@+id/id_dashline"
                android:layout_width="4px"
                android:layout_height="match_parent"
                android:layout_below="@id/id_tv_bottom_currentday_long"
                android:layerType="software"
                app:layout_marginLeftPercent="12%"
                app:layout_marginTopPercent="2%w" />

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/id_rl_bottom_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/id_tv_bottom_currentday_long"
                android:background="@color/transparent"
                app:layout_marginLeftPercent="10.5%"
                app:layout_marginRightPercent="10.5%"
                app:layout_marginTopPercent="3%w">

                <ImageView
                    android:id="@+id/id_iv_indicator"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_oval_stroke"
                    app:layout_heightPercent="3.9%w"
                    app:layout_widthPercent="3.9%w" />


                <TextView
                    android:id="@+id/id_tv_bottom_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/id_iv_indicator"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </com.zhy.android.percent.support.PercentRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/id_tv_bottom_currentday_long"
                android:background="@color/transparent"
                app:layout_marginLeftPercent="10.5%"
                app:layout_marginRightPercent="10.5%"
                app:layout_marginTopPercent="3%w">

            </android.support.v7.widget.RecyclerView>
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>


</android.support.v7.widget.CardView>
