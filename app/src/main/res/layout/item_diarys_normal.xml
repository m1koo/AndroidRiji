<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/anim_click_raise"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:gravity="left"
                android:text = "MyFirstDiary"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/id_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_iv_calendar"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/primary"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_toRightOf="@id/id_iv_calendar"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp"
                    android:lines="1"
                    android:text="十一月"
                    android:textColor="@color/color_hint_text"
                    android:id="@+id/id_tv_date"
                    android:textSize="16sp"
                    android:paddingTop="3dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@color/primary"
                    android:id="@+id/id_iv_position"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_toEndOf="@id/id_iv_position"
                    android:paddingRight="16dp"
                    android:lines="1"
                    android:text="北京中关村"
                    android:paddingTop="3dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/id_tv_position"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

            <TextView
                android:lines="3"
                android:text="北京中关村adf发呆发呆法师打发好的反馈哈大法好的风景啊洪都拉斯肺活量计地方哈肯定是肺活量卡决定分哈伦裤稻盛和夫卡家的沙发和肯定是减肥哈肯定是饭卡决定是否看见打卡解放后 adfadfadfadfadf"
                android:paddingTop="4dp"
                android:paddingLeft="16dp"
                android:paddingBottom="6dp"
                android:paddingRight="16dp"
                android:id="@+id/id_tv_summary"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>